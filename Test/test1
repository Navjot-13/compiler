## Find sum of n digits

begin {
    int n;
    string s;
    s = "Enter sum of how many numbers: ";
    print(s);
    n = input();

    int sum;
    sum = 0;
    ifloop(n >= 1) {
        sum = sum + n;
        n = n - 1;
    }

    s = "The sum is ";
    print(s);
    print(sum);
}