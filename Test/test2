## Decimal arithmetic

begin {
    decimal a, b, res;
    string s;
    s = "Enter first number: ";
    print(s);
    a = input();

    s = "Enter second number: ";
    print(s);
    b = input();

    res = a + b;
    s = "Addition: ";
    print(s);
    print(res);

    res = a - b;
    s = "Subtraction: ";
    print(s);
    print(res);

    res = a * b;
    s = "Multiplication: ";
    print(s);
    print(res);

    res = a / b;
    s = "Division: ";
    print(s);
    print(res);

}