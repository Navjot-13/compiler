## Find factorial of a function

int factorial(int a){
    if(a == 1){
        return 1;
    }
    return a * factorial(a-1); ## Recursion is used here
}

begin {
    int a;
    string s;
    s = "Enter a number: ";
    print(s);
    a = input();
    int c;
    c = factorial(a);
    s = "The factorial is: ";
    print(s);
    print(c);
}